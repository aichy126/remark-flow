{
  "author": "remark-flow contributors",
  "bugs": {
    "url": "https://github.com/ai-shifu/remark-flow/issues"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "unist": "^0.0.1",
    "unist-util-visit": "^5.0.0"
  },
  "description": "Remark plugins for custom button and variable syntax transformation",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/unist": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "lint-staged": "^16.1.6",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "remark": "^15.0.0",
    "remark-parse": "^11.0.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0",
    "unified": "^11.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "homepage": "https://github.com/ai-shifu/remark-flow#readme",
  "keywords": [
    "remark",
    "remark-plugin",
    "markdown",
    "custom-variable"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.md": [
      "markdownlint --fix",
      "prettier --write"
    ],
    "src/**/*.{css,scss,json}": [
      "prettier --write"
    ],
    "src/**/*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix --max-warnings 10",
      "prettier --write"
    ]
  },
  "main": "dist/index.js",
  "name": "remark-flow",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ai-shifu/remark-flow.git"
  },
  "scripts": {
    "build": "tsc --build --clean && tsc --build",
    "bump": "standard-version",
    "commit": "cz",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --max-warnings 10",
    "lint-staged": "lint-staged",
    "lint:fix": "eslint --fix --max-warnings 10",
    "lint:md": "markdownlint *.md",
    "lint:md:fix": "markdownlint --fix *.md",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "types": "dist/index.d.ts",
  "version": "1.0.0-alpha.8"
}
